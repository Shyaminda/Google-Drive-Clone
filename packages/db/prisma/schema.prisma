generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
	id        				Int       @id @default(autoincrement())
	email     				String    @unique
	name		  				String?
	emailVerified 		DateTime?
	avatar    				String?
	password 					String
	accountId 				String?    @unique
	files		  				File[]
	createdAt 				DateTime  @default(now())
	updatedAt 				DateTime  @updatedAt
}

model File {
	id          Int       @id @default(autoincrement())
	name        String
	url         String
	type			  type
	bucketField String
	accountId   String    @unique
	ownerId     Int
	owner       User?     @relation(fields: [ownerId], references: [id])
	extension   String?
	size        Int?
	user        String[]
	createdAt   DateTime  @default(now())
	updatedAt   DateTime  @updatedAt
}

enum type {
	DOCUMENT
	IMAGE
	VIDEO
	AUDIO
	OTHER
}
